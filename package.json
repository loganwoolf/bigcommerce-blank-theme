{
	"name": "bigcommerce-blank-theme",
	"version": "0.0.1",
	"description": "Blank Stencil theme for BigCommerce",
	"main": "index.js",
	"author": "nuotsu <mitchell@nuotsu.dev> (https://nuotsu.dev)",
	"license": "ISC",
	"scripts": {
		"dev": "stencil start",
		"build": "npm run css:build && stencil bundle",
		"push": "npm run css:build && stencil push",
		"css:dev": "tailwindcss -i ./assets/styles/global.css -o ./assets/styles/global.min.css --watch",
		"css:build": "tailwindcss -i ./assets/styles/global.css -o ./assets/styles/global.min.css --minify"
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.0.0-beta.3",
		"tailwindcss": "^4.0.0-beta.3"
	},
	"devDependencies": {
		"prettier": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.6.9"
	}
}
